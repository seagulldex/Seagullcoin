{
  "openapi": "3.0.0",
  "info": {
    "title": "SGLCN-X20 Minting API",
    "version": "1.0.0",
    "description": "Public API to mint SeagullCoin (SGLCN-X20) NFTs on XRPL"
  },
  "servers": [
    {
      "url": "https://outgoing-destiny-bladder.glitch.me"
    }
  ],
  "paths": {
    "/pay": {
      "post": {
        "summary": "Verify SeagullCoin payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "wallet": { "type": "string" }
                },
                "required": ["wallet"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Payment verified"
          },
          "402": {
            "description": "Insufficient balance"
          },
          "403": {
            "description": "No valid payment found"
          }
        }
      }
    },
    "/mint": {
      "post": {
        "summary": "Mint a new NFT using SeagullCoin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "wallet": { "type": "string" },
                  "metadataUri": { "type": "string" }
                },
                "required": ["wallet", "metadataUri"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "NFT minted"
          }
        }
      }
    },
    "/user/{wallet}": {
      "get": {
        "summary": "Get wallet trustlines and info",
        "parameters": [
          {
            "name": "wallet",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Wallet info returned"
          }
        }
      }
    }
  }
}