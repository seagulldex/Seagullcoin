{
  "openapi": "3.0.0",
  "info": {
    "title": "SGLCN-X20 Minting API",
    "version": "1.0.0",
    "description": "Public API to mint NFTs using SeagullCoin (SGLCN-X20) on XRPL"
  },
  "paths": {
    "/pay": {
      "post": {
        "summary": "Verify SeagullCoin payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "wallet": { "type": "string" }
                },
                "required": ["wallet"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Payment verified" },
          "402": { "description": "No valid SeagullCoin payment found" }
        }
      }
    },
    "/mint": {
      "post": {
        "summary": "Mint NFT after SeagullCoin payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "wallet": { "type": "string" },
                  "token_uri": { "type": "string" },
                  "collection": { "type": "string" }
                },
                "required": ["wallet", "token_uri"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "NFT minted successfully" },
          "402": { "description": "SeagullCoin payment not found" },
          "500": { "description": "Minting failed" }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "Get SeagullCoin balance and NFTs",
        "parameters": [
          {
            "in": "query",
            "name": "wallet",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Returns balance and NFTs" },
          "500": { "description": "XRPL error" }
        }
      }
    },
    "/info": {
      "get": {
        "summary": "Returns API and token info",
        "responses": {
          "200": {
            "description": "Returns issuer, currency, fee, etc."
          }
        }
      }
    }
  }
}
